
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="container" style="margin-top:10%">
    <div class="col-md-4 col-md-offset-4 alert alert-info">
        <h2 class="text-center">Sing-Up</h2>
        <form id="loginform">
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-envelope"></i>
                        <input class="form-control" type="email" id="loginemail" name="email" placeholder="emial" />
                    </span>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                        <input class="form-control" type="password" id="loginpassword" name="password" placeholder="password" />
                    </span>
                </div>
            </div>
        </form>
        <div class="form-group">
            <button class="btn btn-info form-control center-block" type="submit" onclick="Authenticate()"><i class="glyphicon glyphicon-log-in"></i> Login</button>
        </div>

        <div class="form-group">
            <a style="float:left">Forgot Password ?</a><a style="float:right; cursor:pointer" onclick="OpenSignUp()">Sign-Up</a>
        </div>
    </div>
</div>

<div class="modal fade" id="SingUpModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h2>Sign Up</h2>
            </div>
            <div class="modal-body">
                <form id="signupForm">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input class="form-control" type="text" id="firstname" name="firstname" placeholder="First Name" />
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input class="form-control" type="text" id="lastname" name="lastname" placeholder="Last Name" />
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input class="form-control" type="text" id="addrses1" name="addrses1" placeholder="Address" />
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input class="form-control" type="text" id="city" name="city" placeholder="City" />
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input class="form-control" type="text" id="province" name="province" placeholder="Province" />
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input class="form-control" type="text" id="country" name="country" placeholder="Country" />
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input class="form-control" type="text" id="postal" name="postal" placeholder="Postal" />
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input class="form-control" type="text" id="phone" name="phone" placeholder="Phone" />
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input class="form-control" type="text" id="email" name="email" placeholder="Email" />
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-lock"></i>
                                <input class="form-control" type="password" id="password" name="password" placeholder="password" />
                            </span>
                        </div>
                    </div>
                </form>
                <div class="form-group">
                    <button class="btn btn-info form-control" style="width:34%" type="submit" onclick="SubmitSingup()"><i class="glyphicon glyphicon-registration-mark"></i> SignUp</button>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    function OpenSignUp() {
        $("#SingUpModal").modal();
    }

    function Authenticate() {
        if ($("#loginemail").val() == "") {
            alert("Email is Required!");
            return;
        }
        if ($("#loginpassword").val() == "") {
            alert("password is Required!");
            return;
        }
        var data = $("#loginform").serialize();
        $.ajax({
            type: "post",
            data: data,
            url: "/SingUp/AuthenticateLogin",
            success: function (result) {
                alert(result);
            }
        });
    }

    function SubmitSingup() {
        if ($("#firstname").val() == "") {
            alert("First Name is Required!");
            return;
        }

        if ($("#lastname").val() == "") {
            alert("Last Name is Required!");
            return;
        }

        if ($("#addrses1").val() == "") {
            alert("Address is Required!");
            return;
        }

        if ($("#city").val() == "") {
            alert("City is Required!");
            return;
        }

        if ($("#city").val() == "") {
            alert("City is Required!");
            return;
        }

        if ($("#province").val() == "") {
            alert("Province is Required!");
            return;
        }

        if ($("#country").val() == "") {
            alert("Country is Required!");
            return;
        }

        if ($("#postal").val() == "") {
            alert("Postal is Required!");
            return;
        }

        if ($("#phone").val() == "") {
            alert("Phone is Required!");
            return;
        }
        if ($("#email").val() == "") {
            alert("Email is Required!");
            return;
        }
        if ($("#password").val() == "") {
            alert("password is Required!");
            return;
        }

        var data = $("#signupForm").serialize();
        $.ajax({
            type: "post",
            data: data,
            url: "/SingUp/UploadData",
            success: function (result) {
                alert(result);
            }
        });
    }
</script>