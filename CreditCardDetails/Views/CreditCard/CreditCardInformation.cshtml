
@{
    ViewBag.Title = "CreditCardInformation";
}

<h2>CreditCardInformation</h2>
@using(Html.BeginForm("CheckRadio","Visa",FormMethod.Post))
{
<div>

    Credit Card:
    Visa<input type="radio" name="cardType" value="Visa" />
    American Express<input type="radio" name="cardType" value="American Express" />
    Master Card<input type="radio" name="cardType" value="MasterCard" />
    @*Visa @Html.RadioButton("CardType","Visa")
    AmericanVisa @Html.RadioButton("CardType","American Visa")
    MasterCard @Html.RadioButton("CardType","Master Card")*@
   
    <br />
    Name On Credit Card:
    <input type="text" name="nameOnCard" />
    <br />
    Credit Card Number:
    <input type="number" name="cardNumber" /> (no spaces or dashes please)
    <br />
    Expiration Date:
    <input type="text" name="date" />(MM/YYYY)

</div>
<input type="submit" value="submit" />
}

